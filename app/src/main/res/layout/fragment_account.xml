<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.account.AccountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_main_title_margin"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_horizontal"
                android:layout_marginTop="@dimen/activity_main_title_margin"
                android:layout_marginRight="@dimen/layout_margin_horizontal"
                android:background="@drawable/style_login_text"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/account_box_padding_top"
                android:paddingHorizontal="@dimen/account_box_padding_horizontal">

                <ImageView
                    android:id="@+id/profileImg"
                    android:layout_width="@dimen/profile_img_size"
                    android:layout_height="@dimen/profile_img_size"
                    android:layout_gravity="center"
                    android:background="@drawable/style_img_background"
                    android:src="@drawable/tap_account" />

                <LinearLayout
                    android:id="@+id/profileInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/infoName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/infoEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="" />

                    <TextView
                        android:id="@+id/infoId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="학번" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profileActivity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/countReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:bufferType="spannable"
                        android:text="내 리뷰  0개"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/countComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:bufferType="spannable"
                        android:text="내 댓글  0개"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/countAppeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:bufferType="spannable"
                        android:text="내 청원  0개"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/layout_margin_horizontal"
                android:background="@drawable/style_login_text"
                android:orientation="vertical"
                android:paddingVertical="@dimen/account_box_padding_top"
                android:paddingHorizontal="@dimen/account_box_padding_horizontal">

                <TextView
                    android:id="@+id/textAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/account_title_size"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="계정" />
                <TextView
                    android:id="@+id/textSchool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingVertical="@dimen/account_content_padding_vertical"
                    android:textSize="@dimen/account_content_size"
                    android:textColor="@color/black"
                    android:text="학교 인증"/>
                <TextView
                    android:id="@+id/textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingVertical="@dimen/account_content_padding_vertical"
                    android:textSize="@dimen/account_content_size"
                    android:textColor="@color/black"
                    android:text="비밀번호 변경"/>
                <TextView
                    android:id="@+id/textNickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingVertical="@dimen/account_content_padding_vertical"
                    android:textSize="@dimen/account_content_size"
                    android:textColor="@color/black"
                    android:text="닉네임 변경"/>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/etc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_horizontal"
                android:layout_marginTop="@dimen/activity_main_title_margin"
                android:layout_marginRight="@dimen/layout_margin_horizontal"
                android:background="@drawable/style_login_text"
                android:orientation="vertical"
                android:paddingVertical="@dimen/account_box_padding_top"
                android:paddingHorizontal="@dimen/account_box_padding_horizontal">

                <TextView
                    android:id="@+id/textEtc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/account_title_size"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="기타" />
                <TextView
                    android:id="@+id/textOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingVertical="@dimen/account_content_padding_vertical"
                    android:textSize="@dimen/account_content_size"
                    android:textColor="@color/black"
                    android:text="회원 탈퇴"/>
                <TextView
                    android:id="@+id/textLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingVertical="@dimen/account_content_padding_vertical"
                    android:textSize="@dimen/account_content_size"
                    android:textColor="@color/black"
                    android:text="로그아웃"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>