<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ReviewFragment"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_vertical"
        android:id="@+id/ll_appeal_article"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_appeal_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_appeal_article_description"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="description" />

        <LinearLayout
            android:id="@+id/ll_appeal_article_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_appeal_article_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/ic_article_like" />

                <TextView
                    android:id="@+id/tv_appeal_article_like"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_appeal_article_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/ic_article_comment" />

                <TextView
                    android:id="@+id/tv_appeal_article_comment"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_appeal_article_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_appeal_article_report"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_article_report" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/transparent" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:padding="10dp"
        android:id="@+id/commentrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    <LinearLayout
        android:background="@drawable/comment_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <EditText
            android:id="@+id/commentEdit"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:hint="댓글입력"
            />

        <ImageView
            android:id="@+id/enter"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/enter_style" />

    </LinearLayout>


</LinearLayout>